vrrp_script check_haproxy {                 
    script "/usr/local/bin/ha88" 
    weight 20                              
    interval 1               
}
vrrp_instance clounsible.mano {             
    interface ens3
    virtual_router_id 1 
    {% if inventory_hostname == 'manmanmano-1' %}
    priority 100
    {% else %}
    priority 99
    {% endif %}
    advert_int 1                            
    virtual_ipaddress {                     
        192.168.100.{{ hostvars['manmanmano-2']['ansible_default_ipv4']['address'].split('.')[-1] }}/24                   
    }
    unicast_peer {                          
        {% for vm in groups['haproxy'] %}
        {% if inventory_hostname != vm %}
        {{ hostvars[vm]['ansible_default_ipv4']['address'] }}
        {% endif %}
        {% endfor %}
    }
    track_script {
        check_haproxy
    }
}
